<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <!-- Vue Language -->
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.wildwebdeveloper.html"
            file-extensions="vue"
            id="com.tulin.v8.editors.vue"
            name="Vue"
            priority="normal">
      </content-type>
   </extension>
   
   <extension
       point="org.eclipse.core.contenttype.contentTypes">
	    <content-type
	          base-type="org.eclipse.wst.html.core.htmlsource"
	          file-extensions="vue"
	          id="com.tulin.v8.editors.vue.contenttype"
	          name="Vue"
	          priority="normal">
	    </content-type>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.tulin.v8.editors.vue.editor.VueEditor"
            contributorClass="com.tulin.v8.editors.vue.editor.VueEditorContributor"
            default="true"
            extensions="vue"
            icon="icons/vueico.png"
            id="com.tulin.v8.editors.vueEditor"
            name="Vue Editor">
         <contentTypeBinding
               contentTypeId="com.tulin.v8.editors.vue.contenttype">
         </contentTypeBinding>
      </editor>
   </extension>
   
	<extension point="org.eclipse.team.core.fileTypes">
		<fileTypes
			type="text"
			extension="vue">
		</fileTypes>
	</extension>

</plugin>
